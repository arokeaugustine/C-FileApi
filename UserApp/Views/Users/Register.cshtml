@model UserApp.Models.UserModel;
@{
    ViewData["Title"] = "Registration Page";
}

<h3>
    Registration Page
</h3>
@{
    if (TempData["MsgType"] == "success")
    {
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>
            @TempData["Message"]
        </strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="close"></button>
        <span aria-hidden="true">&times;</span>

    </div> 
    } 
    else{
         <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>
            @TempData["Message"]
        </strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="close"></button>
        <span aria-hidden="true">&times;</span>

    </div> 
    }

}



@* <span class="text-warning">@TempData["message"]</span> *@

<form asp-action="Register" method="Post">
    
    <div class="form-group">
        <input asp-for="FirstName" type="text" placeholder="First Name" class="form-control mt-2">
        <input asp-for="LastName" type="text" placeholder="Last Name" class="form-control mt-2">
        <input asp-for="PhoneNumber" type="text" placeholder="PhoneNumber" class="form-control mt-2">
        <input asp-for="Email" type="text" placeholder="Email" class="form-control mt-2">
    </div>


    <button class="btn btn-success mt-3">Submit</button>
    @* <button class="btn btn-primary" asp-action="" asp-controller=""></button> *@

</form>